  require "shellwords"

  def esc(x)
      Shellwords.shellescape(x)
  end
%>

http_response=$(curl -s -k -o /dev/null -I -w "%{http_code}" http://localhost:<%= esc(p("port")) %>/minio/health/live)

[ "$http_response" = "200" ]
